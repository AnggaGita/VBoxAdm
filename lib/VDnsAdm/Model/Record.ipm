sub _init_fields {
    return [qw(id domain_id name type content ttl prio change_date ordername auth)];
}

sub _valid_type {
    my $self = shift;
    my $type = shift;

    if ( $type =~ m/(?:A|AAAA|AFSDB|CERT|CNAME|DNSKEY|DS|HINFO|KEY|LOC|MX|NAPTR|NS|NSEC|PTR|RP|RRSIG|SOA|SPF|SSHFP|SRV|TXT)/ ) {
        return 1;
    }
    return;
}

